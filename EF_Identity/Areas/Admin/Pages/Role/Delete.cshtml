@page "/admin/delete-role/{roleid}"
@model EF_Identity.Areas.Admin.Pages.Role.DeleteModel
@{
	ViewData["Title"] = "Xoa Role";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>Ban co chac chan muon xoa<strong>@Model.role.Name</strong></p>

            <div class="form-group">
                <input type="submit" value="Xoa" class="btn btn-danger" />
                <a class="btn btn-primary" asp-page="./Index">Danh sach cac role</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


